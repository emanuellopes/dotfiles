#modes
set $mode_system System (l) trancar, (e) sair, (s) suspender, (h) hibernar, (r) reiniciar, (Shift+s) desligar
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker lock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+s mode "$mode_system"

set $mode_extmonitor External Monitor: HLeft (J), HRight (L), (O) OffHDMI VGA: VLEFT: (left) VRIGHT: (right) VOFF: (down)
mode "$mode_extmonitor"
{
    bindsym j exec --no-startup-id .scripts/extmonitor.sh he
    bindsym l exec --no-startup-id .scripts/extmonitor.sh hd
    bindsym o exec --no-startup-id .scripts/extmonitor.sh ho
    bindsym r exec --no-startup-id .scripts/extmonitor.sh hr
    bindsym Left exec --no-startup-id .scripts/extmonitor.sh vl
    bindsym Right exec --no-startup-id .scripts/extmonitor.sh vr
    bindsym Down exec --no-startup-id .scripts/extmonitor.sh vo

    # back to normal: Escape
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_extmonitor"

set $mode_current_mpd_delete Delete currently playing song? y/n
mode "$mode_current_mpd_delete"
{
   bindsym y exec --no-startup-id .scripts/remove_current_mpd.sh; mode "default"
   bindsym n mode "default"
}
bindsym $mod+Shift+Delete mode "$mode_current_mpd_delete"

bindsym $mod+Shift+P exec --no-startup-id .scripts/mpd_to_usb.sh
set $mode_set_volume volume

#Passthrough mode - disables all i3 keybindings
set $passthrough_keys Passtrough Mode (Disable: Mod+Shift+Backspace)
mode "$passthrough_keys" {
	        bindcode $mod+Shift+22 mode "default"
}
bindcode $mod+Shift+22 mode "$passthrough_keys"